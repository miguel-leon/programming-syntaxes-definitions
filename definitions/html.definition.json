{
  "$schema": "../node_modules/spliceation-transmutator.typescript/schema.json",
  "definition": [
    {
      "concurrent": [
        {
          "match": "<!--[^]*?-->",
          "class": "comment",
          "multiline": true
        },
        {
          "match": "<[a-zA-Z_](?:\"[^\"]*\"|'[^']*'|[^>])*>",
          "class": "tag",
          "multiline": true,
          "recursion": [
            {
              "match": "^<"
            },
            {
              "match": "^[a-zA-Z_][a-zA-Z0-9-_.]*",
              "class": "tag-name"
            },
            {
              "concurrent": [
                {
                  "match": "[^\\s\\x00\"'<>/=]+",
                  "class": "attribute"
                },
                {
                  "match": "=\\s*(?:\"[^\"]*\"|'[^']*'|[a-zA-Z0-9-._:]+)",
                  "class": "value",
                  "multiline": true
                }
              ]
            }
          ]
        },
        {
          "match": "</[a-zA-Z_][^>]*>",
          "class": "tag",
          "multiline": true,
          "recursion": [
            {
              "match": "^</"
            },
            {
              "match": "^[a-zA-Z_][a-zA-Z0-9-_.]*",
              "class": "tag-name"
            }
          ]
        }
      ]
    }
  ]
}
