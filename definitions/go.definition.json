{
  "$schema": "../node_modules/spliceation-transmutator.typescript/schema.json",
  "definition": [
    {
      "concurrent": [
        {
          "match": "([\"'])(?:\\\\.|[^])*?\\1",
          "class": "string",
          "multiline": true,
          "recursion": [
            {
              "match": "\\%\\d*\\s?.",
              "class": "interpolation",
              "recursion": true
            }
          ]
        }
      ]
    },
    {
      "match": "\\/\\*[^]*\\*\\/",
      "class": "comment",
      "multiline": true
    },
    {
      "match": "\\/\\/.*",
      "class": "comment"
    },
    {
      "class": "keyword",
      "match": [
        "break",    
        "case",     
        "chan",   
        "const",   
        "continue",
        "default",
        "defer",
        "else",
        "fallthrough",
        "for",
        "func",
        "go",
        "goto",
        "if",
        "import",
        "interface",
        "map",
        "package",
        "range",
        "return",
        "select",
        "struct",
        "switch",
        "type(?!\\()",
        "var"
      ]
    },
    {
      "match": "[a-zA-Z_][a-zA-Z0-9_]*\\s?(?=\\()",
      "class": "function"
    },
    {
      "class": "datatype",
      "ignoreCase": true,
      "match": [
        "\\u?int(?:8|16|32|64|ptr)?",    
        "byte",     
        "float(?:32|64)?",   
        "complex(?:64|128)?",   
        "string",
        "bool"
      ]
    }
  ]
}